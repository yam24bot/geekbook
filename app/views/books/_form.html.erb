<%= form_for @book, html: {multipart: true} do |f| %>

  <%= f.label :title%>
  <%= f.text_field :title%>

  <%= f.label :author%>
  <%= f.text_field :author%>

  <%= f.label :description%>
  <%= f.text_area :description%>

  <%= f.label :Genre%>
  <%= f.text_field :all_tags%>

  <%= f.file_field :envelope %>

  <%= f.submit "Save" %>

<% end %>
