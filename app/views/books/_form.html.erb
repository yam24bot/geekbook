<%= form_for @book, html: {multipart: true} do |f| %>

  <p><%= f.label :title%></p>
  <p><%= f.text_field :title%></p>

  <p><%= f.label :author%></p>
  <p><%= f.text_field :author%></p>

  <p><%= f.label :description%></p>
  <p><%= f.text_area :description%></p>

  <p><%= f.label :Genre%></p>
  <p><%= f.text_field :all_tags%></p>

  <p><%= f.file_field :envelope %></p>

<p>  <%= f.submit "Save" %><p>

<% end %>
